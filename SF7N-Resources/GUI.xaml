<Window Name="SF7N"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SF7N Interface" Height="720" Width="1920" FontFamily="Courier New" FontSize="16">
    <Window.Resources>
        <Style TargetType="TabControl">
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="TabItem">
            <Setter Property="Height" Value="0"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
    </Window.Resources>

    <TabControl Name="TabControl">
        <TabItem>
            <!-- Splashscreen -->
            <StackPanel VerticalAlignment="Center">
                <TextBlock   Text="SF7N Interface" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,0,0,16"/>
                <TextBlock   Name="LoadingText" Text="Lorem ipsum dolor sit amet" HorizontalAlignment="Center"/>
            </StackPanel>
        </TabItem>
        <TabItem>
            <!-- Main Interface -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="32"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Header Toolbar -->
                <TabControl Name="Toolbar" Margin="10,0,10,10" Background="#F1EDED">
                    <!-- Search Toolbar -->
                    <TabItem>
                        <Grid Margin="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Expander Header="Settings" Grid.ColumnSpan="4" Margin="16,0,0,0">
                                <UniformGrid Columns="6" Margin="0,16,0,0">
                                    <Button   Name="ResetSorting" Content="Reset Sorting" Margin="0,0,32,0"/>
                                    <CheckBox Name="AliasMode" Content="  Alias Mode" IsChecked="True" VerticalContentAlignment="Center" Margin="0"/>
                                    <CheckBox Name="InputAssist" Content="  Input Assist" IsChecked="True" VerticalContentAlignment="Center" Margin="0"/>
                                    <CheckBox Name="ReadOnly" Content="  Read-only Mode" IsChecked="True" VerticalContentAlignment="Center" Margin="0"/>
                                </UniformGrid>
                            </Expander>

                            <Grid Grid.Column="1" Background="White" VerticalAlignment="Top" Height="24" MaxHeight="24">
                                <TextBlock Foreground="Gray" Margin="8,0,8,0" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=SearchRules, Path=Text.IsEmpty}" Value="True">
                                                    <Setter Property="Text" Value="Enter filter conditions, e.g. ID:2020.*"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBox Name="SearchRules" VerticalContentAlignment="Center" Padding="4,0,8,0" Background="Transparent"/>
                            </Grid>
                            <Button Grid.Column="2" Name="Search" Content="Filter CSV" Margin="16,0,0,0" MaxHeight="24" VerticalAlignment="Top"/>
                        </Grid>
                    </TabItem>
                    <!-- Editing toolbar -->
                    <TabItem Margin="0" Height="0">
                        <UniformGrid Columns="6">
                            <UniformGrid Columns="2" Margin="0,0,0,0">
                                <Button Name="InsertLast" Content="Append" Margin="0,0,8,0"/>
                                <TextBox Name="InsertLastCount" Margin="8,0,48,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </UniformGrid>
                            <Button Name="InsertAbove" Content="Insert Above" Margin="0,0,8,0"/>
                            <Button Name="InsertBelow" Content="Insert Below" Margin="8,0,8,0"/>
                            <Button Name="RemoveSelected" Content="Remove Selected" Margin="8,0,8,0"/>
                            <Button Name="Commit" Content="Commit" Margin="8,0,8,0"/>
                            <Button Name="CommitReturn" Content="Commit &amp; Return" Margin="8,0,0,0"/>
                        </UniformGrid>
                    </TabItem>
                </TabControl>

                <!-- Main Grid -->
                <!-- Columns are dynamically generated on launch -->
                <DataGrid Grid.Row="1" Margin="10,0,10,10" Name="CSVGrid" IsReadOnly="False" AutoGenerateColumns="False"
                EnableColumnVirtualization="True" EnableRowVirtualization="True"
                HorizontalGridLinesBrush="#E2E3E3" GridLinesVisibility="Horizontal" SelectionUnit="CellOrRowHeader"
                RowHeaderWidth="0" MinRowHeight="25" FrozenColumnCount="1" CanUserAddRows="False">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="MinWidth" Value="128"/>
                            <Setter Property="Padding" Value="8"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        </Style>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>

                <!-- Gridsplitter -->
                <GridSplitter Grid.Column="1" Grid.RowSpan="2" Width="4" HorizontalAlignment="Center"/>

                <!-- Preview -->
                <Button Margin="8,0,0,0" Grid.Column="2" Grid.RowSpan="2" Background="White" BorderThickness="0">
                    <Grid>
                        <TextBlock Text="Image Preview"/>
                        <Image Name="Preview"/>
                    </Grid>
                </Button>

                <!-- Statusbar -->
                <Grid Grid.Row="2" Grid.ColumnSpan="3" Background="#F1EDED">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1"/>
                        <ColumnDefinition Width="7*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Name="CurrentMode" Text="Search Mode" Margin="16,0,16,0" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Background="#363636" Width="1" Margin="0,4,0,4"/>
                    <TextBlock Grid.Column="2" Name="TotalRows" Text="Total Rows:" Margin="16,0,16,0" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="3" Background="#363636" Width="1" Margin="0,4,0,4"/>
                    <TextBlock Grid.Column="4" Name="ActiveCell" Text="Active Cell:" Margin="16,0,16,0" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        </TabItem>
    </TabControl>
</Window>